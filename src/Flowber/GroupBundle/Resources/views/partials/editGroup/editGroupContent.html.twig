{% form_theme groupForm 'bootstrap_3_layout.html.twig' %}

<!-- Form -->
<div class="container">
    <div class="row">
        <div>
            <form method="post" enctype="multipart/form-data">
                <div class="col-xs-2"></div>
                
                <div class="col-xs-8 group-edit-form create-group-form form-horizontal">  
                    <div class="form-title"> Modifier la sortie </div>

                        <div class="form-group">
                            <label for="event-title" class="col-sm-2 control-label">Titre</label>
                            <div class="col-sm-10">
                                {{form_widget(groupForm.title)}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="event-tease" class="col-sm-2 control-label">Phrase d'accroche</label>
                            <div class="col-sm-10">
                                {{form_widget(groupForm.subtitle)}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="event-category" class="col-sm-2 control-label">Catégories</label>
                            <div class="col-sm-10">
                                {{form_widget(groupForm.categories)}}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="event-category" class="col-sm-2 control-label">Photo de profil</label>
                            <div class="col-sm-10" style="margin-top:15px;">
                                {{form_widget(profilePictureForm)}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="event-category" class="col-sm-2 control-label">Photo de couverture</label>
                            <div class="col-sm-10"  style="margin-top:10px;">
                                {{form_widget(coverPictureForm)}}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="event-description" class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-10">
                                {{form_widget(groupForm.description)}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Visibilité</label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    {{form_widget(groupForm.privacy, {'label_attr':{'class':'radio-inline'}})}}
                                </label>
                            </div>
                        </div>

                        {{ form_rest(groupForm) }}
                        {{ form_rest(profilePictureForm) }}
                        {{ form_rest(coverPictureForm) }}

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Confirmer</button>
                        </div>  
                    </div>
                </div>
            </form>                   
        </div>
    </div>
</div>
{# Le formulaire reste inchangé #}