{# empty Twig template #}
{% extends '::base_frontoffice.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('assets/css/GroupBundle/group.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/FrontOfficeBundle/generic-maps.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/PostBundle/postandcomment.css') }}"/>
{% endblock %}

{% block smallMenu %}
    {{parent()}}
    <!-- BEGIN small screen menu -->
    {% include 'FlowberGroupBundle::partials/groupNavbarSmall.html.twig' %}
    <!-- END small screen menu -->
{% endblock %}

{% block body %}

    <!-- navbar top -->
    {% include 'FlowberFrontOfficeBundle::partials/common/main-connected-navbar.html.twig' %}
    
    <!-- Group Cover -->  
    {% include 'FlowberGroupBundle::partials/groupCover.html.twig' %}

    <!-- Second navbar -->
    {% include 'FlowberGroupBundle::partials/groupNavbar.html.twig' %}
   
    <!-- page -->
    {% include 'FlowberGroupBundle::partials/groupContent.html.twig' %}
   
    <!-- footer -->                  
    {% include 'FlowberFrontOfficeBundle::partials/common/footer.html.twig' %}
    
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {# Put specific JS below #}
    <script type="text/javascript" src="{{asset('assets/js/moment-with-locales.min.js')}}"></script>
    <script type="text/javascript" src="{{asset('assets/js/bootstrap-datetimepicker.min.js')}}"></script>
    <script src="{{ asset('assets/js/FrontOfficeBundle/maps/gmaps.js') }}"></script>
    <script src="{{ asset('assets/js/PostBundle/genericPost.js') }}"></script>

    
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDu4slAxOS7yprod9nmIS1AZm3LC9gk_2Q&signed_in=true&libraries=places&callback=initMap"
    async defer></script> 
    
    <script type="text/javascript">
        $(function () {
            $('.flowber_datepicker').datetimepicker({
                locale: 'fr',
                format: 'L',
            });
            $('.flowber_timepicker').datetimepicker({
                locale: 'fr',
                format: 'LT',
            });
        });

        $('#groupNavbar a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
        
        $("#newPostTextArea, #newMailToHost").keyup(function(e) {
            while($(this).outerHeight() < this.scrollHeight + parseFloat($(this).css("borderTopWidth")) + parseFloat($(this).css("borderBottomWidth"))) {
                $(this).height($(this).height()+1);
            };
        }); 
    </script>
    
    <script src="{{ asset('assets/js/FrontOfficeBundle/dropzone/dropzone.js') }}"></script>
    <script src="{{ asset('assets/js/GroupBundle/group.js') }}"></script>
{% endblock %}