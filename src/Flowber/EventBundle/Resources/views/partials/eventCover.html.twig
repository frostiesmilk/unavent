<div class="jumbotron generic-cover" style="background-image: url('{{asset(coverInfo.coverPicture)}}')"> 
    <div class="container" >
        <div class="row-fluid">  
            <div class="col-md-3 col-sm-3 col-xs-8">            
                <div class="generic-cover-profile-picture img-circle" style="background-image: url('{{asset(coverInfo.profilePicture)}}')"></div> 
            </div>
            <div class="col-xs-4 text-right hidden-lg hidden-lg hidden-md hidden-sm">
                <a href="{{ path('flowber_edit_event', {'id': circle.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span></a>
            </div>
            <div class="col-md-7 col-sm-9 col-xs-12">
                <div class="generic-cover-title">
                    <h1 class="generic-cover-title-name">{{ coverInfo.title }}</h1>
                    <p class="generic-cover-title-description hidden-xs">{{ coverInfo.subtitle }}</p>
                </div>
            </div>
            {% if isCreator == true %}
            <div class="col-md-2 col-sm-3 hidden-xs text-center">
                <div class="generic-cover-edit-button">
                    <a href="{{ path('flowber_edit_event', {'id': circle.id}) }}" class="btn btn-default">Modifier la sortie</a>
                </div>
            </div>
            {% endif %}
        </div>

    </div>
</div>    