{# empty Twig template #}
{% extends '::base_frontoffice.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('bundles/flowberprofile/css/profile.css') }}"/> 
{% endblock %}

{% block smallMenu %}
    {{parent()}}
    <!-- BEGIN small screen menu -->
    {% include 'WybeFrontOfficeBundle::partials/event/event-navbar-small.html.twig' %}

    <!-- END small screen menu -->
{% endblock %}

{% block body %}
    <!-- navbar top -->
    {% include 'FlowberFrontOfficeBundle::partials/common/main-connected-navbar.html.twig' %}
    
 
    
   <div id="events" class="user-profile-events user-profile" style="padding-top : 50px">
        <div class="user-profile-category-row text-center">
            <span class="user-profile-category-title">Mes évènements</span>
        </div>

        <div class="container user-profile-events-container">
            <div class="row">
                {% for event in allEvent %}
                    
                    {% set eventProfilePicturePath = 'bundles/flowberprofile/images/Default/profilePictureDefault.png' %} {# default User Cover #}
                    {% if event.profilePicture is not null %}
                        {% set eventProfilePicturePath = event.profilePicture.getWebPath() %}
                    {% endif %} 
                    
                    <div class="col-md-3 col-xs-6">
                        <div class="thumbnail event-list-thumbnail ">
                            <div class="caption event-name-frame">
                                <a tabindex="-1" href="{{ path('flowber_event_homepage', {'id': event.id}) }}">
                                    <h3 class="event-name">{{ event.title }}</h3>
                                </a>
                            </div>
                            <div class="event-image-frame">
                                <a tabindex="-1" href="{{ path('flowber_event_homepage', {'id': event.id}) }}">
                                    <img class="event-image" src="{{asset(eventProfilePicturePath)}}" alt=""/>
                                </a>
                                <p class="event-image-frame-date">
                                    <span class="event-image-frame-date-day">{{ event.eventDate|date("\\l\\e d/m/Y") }}</span><br/>                                                      
                                    <span class="event-image-frame-date-day">{{ event.eventDate|date("\\à g:i") }}</span>                                                       
                                </p>
                            </div>

                            <div class="caption text-center ">
                                <p class="event-description">238 participants &middot; 3 amis &middot; {{ event.postalAddress.city }}</p>
                                <button class="btn btn-default font-white event-join-button"><span class="glyphicon glyphicon-plus font-white" aria-hidden="true"></span> Rejoindre</button>
                            </div>
                        </div>
                    </div>  
                {% endfor %}
        </div>
    </div>
                                
    <!-- footer -->                  
    {% include 'WybeFrontOfficeBundle::partials/common/footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{parent()}}

{% endblock %}