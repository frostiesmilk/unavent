{# empty Twig template #}
{% extends '::base_frontoffice.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('assets/css/EventBundle/generic-event.css') }}"/> 
{% endblock %}

{% block smallMenu %}
    {{parent()}}
    <!-- BEGIN small screen menu -->
    <!-- END small screen menu -->
{% endblock %}

{% block body %}

    <!-- Main menu -->
    {% include 'FlowberFrontOfficeBundle::partials/common/main-connected-navbar.html.twig' %}
       
    <!-- Cover -->
    <div class="jumbotron create-event-cover" style="background-image: url({{asset('assets/images/UserBundle/signIn/cover-streetsheeps.jpg')}})">    
        <div class="container" >
            <div class="row-fluid text-center">       
                <h1 class="create-event-cover-title ">Recherchez votre prochaine aventure !</h1>
                <form class="form-inline">
                <div class="form-group">
                  <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Rechercher un groupe">
                </div>
                <button type="submit" class="btn btn-default">Rechercher !</button>
                </form>
            </div>
        </div>
        <div class="container event-thumbnail-display-container">
            <div class="row">
                {% for event in events %}
                        <div class="col-md-3 col-xs-6">
                            <div class="thumbnail event-list-thumbnail ">
                                <div class="caption event-name-frame">
                                    <a tabindex="-1" href="{{ path('api_get_circle', {'circleId': event.id}) }}">
                                        <h3 class="event-name">{{event.title}}</h3>
                                    </a>
                                </div>
                                <div class="event-image-frame">
                                    <a tabindex="-1" href="{{ path('api_get_circle', {'circleId': event.id}) }}">
                                        <img class="event-image" src="{{asset(event.profilePicture)}}" alt=""/>
                                    </a>
                                    <p class="event-image-frame-date">
                                        <span class="event-image-frame-date-day">{{event.startDate}}</span><br/>                                                      
                                        <span class="event-image-frame-date-day">{{event.startHour}}</span>                                                       
                                    </p>
                                </div>

                                <div class="caption text-center ">
                                    <p class="event-description">{{event.members}} {% if event.members <= 1 %} participant {% else %} participants {% endif %}  
                                        &middot; {{event.friends}} {% if event.friends <= 1 %} ami {% else %} amis {% endif %}   
                                        &middot; {{event.city}}
                                    </p>
                                    <a  href="{{ path('api_get_circle', {'circleId': event.id}) }}"> 
                                        <button class="btn btn-default font-white event-join-button">
                                            <span class="glyphicon glyphicon-plus font-white" aria-hidden="true"></span> Voir la sortie
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {%endfor%}
            </div>
        </div>
    </div>

    
    <!-- footer -->                  
    {% include 'FlowberFrontOfficeBundle::partials/common/footer.html.twig' %}
    
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {# Put specific JS below #}    
    
{% endblock %}
