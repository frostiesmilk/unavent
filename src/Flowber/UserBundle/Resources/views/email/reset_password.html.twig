{# Flowber/UserBundle/Resources/views/email/password_resetting.email.twig #}

{% block subject %}FlowBer - Réinitialisation de votre mot de passe{% endblock %}

{% block body_text %}
{% autoescape false %}
{% endautoescape %}
{% endblock %}

{% block body_html %}
    <p>Bonjour {{user.surname}},</p>

    <p>Pour réinitialiser votre mot de passe, cliquez sur le lien ci-dessous:</p>
    <a href="{{confirmationUrl}}">{{confirmationUrl}}</a>

