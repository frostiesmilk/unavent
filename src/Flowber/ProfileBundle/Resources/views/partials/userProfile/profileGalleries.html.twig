<div id="photos" class="user-profile-gallery background-dark-blue user-profile">
    <div class="container">
        <div class="row user-profile-category-row">
            <div class="col-xs-12 text-center">
                <span class="user-profile-category-title font-white">Mes galeries</span>
            </div>
        </div>
    </div>

    <div class="container user-profile-gallery-container galleries-list">
        <div class="row">
