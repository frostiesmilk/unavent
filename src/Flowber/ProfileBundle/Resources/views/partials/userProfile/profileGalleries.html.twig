                <button class="btn btn-default" data-toggle="modal" data-target="#addGalleryModal"><span class="glyphicon glyphicon-picture"></span> Ajouter une galerie</button>
            </div>
            <!-- Galleries list -->
            {% for gallery in galleries %}
            <div class="col-md-3 col-xs-12">
            {% include 'FlowberGalleryBundle::partials/gallery-thumbnail.html.twig' %}
            </div>
            {% endfor %}
        </div>
    </div>
</div>

