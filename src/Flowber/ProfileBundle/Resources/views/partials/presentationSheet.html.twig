{# empty Twig template #}
<div id="fiche" class="user-profile">
    <div class="user-profile-resume">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-sm-12 profile-alert-box">
                    {% for flash_message in app.session.flashbag.get('success') %}
                        <div class="alert alert-success alert-dismissible alert-autoclosing alert-event-main fade in flash-notice" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                    {% for flash_message in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger alert-dismissible alert-event-main fade in flash-notice" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row">                
                <div class="col-md-6 col-sm-6 col-xs-12 col-bg-white user-profile-element">
                    <div class="user-profile-introduction-text-block">
                        <h2 class="name">{{ user.getFirstname }} {{ user.getSurname }}</h2>
                        <p class="user-job">{{ profile.getSubtitle }}</p>
                        <p>{{ user.getBirthdate|date("d/m/Y") }} (23 ans)<br/>
                        {% if user.getPostalAddress.count > 0 %}
                            {% for add in user.getPostalAddress %}
                                {{ add.city }} - {{ add.zipcode|number_format(0, '', '') }}
                            {% endfor %}
                        {% endif %}
                        </p>
                    </div>
                    <div class="user-profile-description">
                        <p> {{ profile.getDescription }} </p>
                    </div>
                </div>
                    
                <div class="col-md-6 col-sm-6 col-xs-12 user-profile-element">
                    <!--
                        <div class="user-profile-custom-icon" style="background-image: url('{{asset('images/frontoffice/user/user-custom-icons/kangaroo.png')}}')"></div>
                    -->
                    <h2 class="user-profile-interest-title">Mes inspirations</h2>
                    {% if profile.hobbies.count > 0 %}
                        <table class="user-profile-interest">

                            {% for hobby in profile.hobbies %}
                                <tr>
                                    <td class="user-profile-interest-subject text-center">
                                        <span> {{ hobby.category.title }}</span><br/>
                                        <div class="progress category-jauge">
                                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{ hobby.percent }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ hobby.percent }}%">
                                              <span class="sr-only">{{ hobby.percent }}</span>
                                            </div>
                                        </div> 
                                    </td>
                                    <td class="user-profile-interest-content">
                                        {{ hobby.description }}                      
                                    </td>
                                </tr>
                            {% endfor %}

                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>