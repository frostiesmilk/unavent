{% extends '::base_frontoffice.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('bundles/flowberprofile/css/profile.css') }}"/> 
{% endblock %}

{# Menus for small screens #}
{% block smallMenu %}
    {# Parent is main menu #}
    {{parent()}}
    
    {# Following is second menu for small screen as well #}
    <ul class="nav nav-pills nav-justified menu-secondary">
        <li><a class="scroll-anchor" href="#fiche"><span class="glyphicon glyphicon-eye-open"></span></a></li>
        <li><a class="scroll-anchor" href="#groups"><span class="glyphicon glyphicon-list"></span></a></li>
        <li><a class="scroll-anchor" href="#events"><span class="glyphicon glyphicon-apple"></span></a></li>
        <li><a class="scroll-anchor" href="#photos"><span class="glyphicon glyphicon-picture"></span></a></li>
        <li><a class="scroll-anchor" href="#friends"><i class="fa fa-users"></i></a></li>
        <li>
            <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span class="glyphicon glyphicon-option-vertical"></span></a>
            <ul class="dropdown-menu dropdown-menu-right">
                <li>
                    <a href="#" data-toggle="modal" data-target="#modal-wink" title="Envoyez un clin d'oeil à Marie BOIVENT">
                        <img class="menu-link-icon" src="{{asset('bundles/wybefrontoffice/images/icons/wink.png')}}"/> Envoyer un clin d'oeil
                    </a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#modalMessage" title="Envoyez un message à Marie BOIVENT">
                        <img class="menu-link-icon" src="{{asset('bundles/wybefrontoffice/images/icons/bubble-chat.png')}}"/> Envoyer un message
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img class="menu-link-icon" src="{{asset('bundles/wybefrontoffice/images/icons/add-user.png')}}"/> Ajouter en ami
                    </a>
                </li>
                <li>
                    <a class="back-top" href="#">
                        <span class="fa fa-caret-up"></span> Remonter la page
                    </a>
                </li>
            </ul>
        </li>
    </ul>
    <!-- END small screen menu -->
{% endblock %}

{# Preparing variables #}
{% set userCoverPath = 'bundles/flowberprofile/images/Default/coverPictureDefault.png' %} {# default User Cover #}
{% if profile.coverPicture.webPath is defined %}
    {% set userCoverPath = profile.coverPicture.webPath %}
{% endif %}
{% set userCoverAlt = 'Photo de couverture' %} {# default User Cover Alt #}
{% if profile.coverPicture.alt is defined %}
    {% set userCoverAlt = profile.coverPicture.alt %}
{% endif %}

{% block body %}

    <!-- Main menu -->
    {% include 'FlowberFrontOfficeBundle::partials/common/main-connected-navbar.html.twig' %} 
                            
    <!-- User Cover -->  
    {% include 'FlowberProfileBundle::partials/cover.html.twig' %}           
                
    <!-- Second menu -->
    {% include 'FlowberProfileBundle::partials/profileMenu.html.twig' %} 

    <!-- Fiche -->
    {% include 'FlowberProfileBundle::partials/presentationSheet.html.twig' %}           
    
    <!-- My groups -->
    {% include 'FlowberProfileBundle::partials/groups.html.twig' %}           
                                
    <!-- My events-->                            
    {% include 'FlowberProfileBundle::partials/events.html.twig' %}
    
    <!-- My gallery modal-->
    {% include 'FlowberGalleryBundle::partials/galleries.html.twig' %}
    
    <!-- My friends-->                            
    {% include 'FlowberProfileBundle::partials/friends.html.twig' %}           

    <!-- Footer -->
    {% include 'FlowberFrontOfficeBundle::partials/common/footer.html.twig' %}
    
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {# Put specific JS below #}    
        
