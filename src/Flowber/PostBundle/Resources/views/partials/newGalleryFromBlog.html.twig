{% form_theme newGalleryForm 'bootstrap_3_layout.html.twig' %}

<div role="tabpanel" class="tab-pane generic-blog-new-gallery" id="newgallery">
    {{form_start(newGalleryForm)}}
    <div class="form-group">
        <label>Titre de la galerie</label>
        {{form_widget(newGalleryForm.title)}}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{form_widget(newGalleryForm.description)}}
    </div>
    <div class="form-group">
        <label>Sélectonner les photos</label>
        {{form_widget(newGalleryForm.uploadedFiles)}}
    </div>
    <div class="generic-blog-new-post-footer row">
        <div class="generic-blog-new-post-footer-actions col-xs-6 text-left"></div>
        <div class="generic-blog-new-post-footer-confirm col-xs-6 text-right">
            <button type="submit" class="btn btn-default btn-red">Créer la galerie</button>
        </div>
    </div>
    {{form_end(newGalleryForm)}}
</div>
