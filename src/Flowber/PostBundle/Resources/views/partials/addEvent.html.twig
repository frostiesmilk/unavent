{% form_theme postWithEventForm 'bootstrap_3_layout.html.twig' %}

<div role="tabpanel" class="tab-pane group-blog-new-post-event" id="newevent">
    <form action="{{ path('add_post_with_event', { 'group_id' : id } ) }}" method="post" {{ form_enctype(postWithEventForm) }}> 
        <div class="form-group row">
            <label for="event-title" class="col-sm-2 control-label text-right">Ajouter un commentaire</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.message)}}
            </div>
        </div>
        {% if form_errors(postWithEventForm) %}
        <div class="form-error-custom">
            {{form_errors(postWithEventForm)}}                
        </div>
        {% endif %}
        {% if form_errors(postWithEventForm.event.maxParticipants) %}
            <div class="form-error-custom">
            {{form_errors(postWithEventForm.event.maxParticipants)}}
            </div>
            {% endif %}
        <div class="form-group row">
            <label for="event-title" class="col-sm-2 control-label text-right">Titre *</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.title)}}
            </div>
        </div>
        <div class="form-group row">
            <label for="event-tease" class="col-sm-2 control-label">Phrase d'accroche</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.subtitle)}}
            </div>
        </div>
        <div class="form-group row">
            <label for="event-category" class="col-md-2 control-label">Catégories</label>            
            <div class="col-md-10">
                {{form_widget(postWithEventForm.event.categories)}}
            </div>
        </div>             
        <div class="form-group row">
            <label for="event-description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.description)}}
            </div>
        </div>
        <div class="form-group row">
            <label for="event-description" class="col-sm-2 control-label">{{form_label(postWithEventForm.event.maxParticipants)}}</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.maxParticipants)}}
            </div>
        </div>
        <div class="form-group row">
            <label for="event-location" class="col-sm-2 control-label">Lieu</label>
            <div class="col-sm-10">
                <input id="pac-input" class="autocomplete-map-controls" type="text"
                    placeholder="Enter a location">
               <div id="map"></div>           
           </div> 
        </div> 
         <div class="form-group row">
            <label for="event-place-name" class="col-sm-2 control-label">Nom</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.postalAddress.name)}}
            </div>
        </div>                     
        <div class="form-group row">
            <label for="event-address" class="col-sm-2 control-label">Adresse</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.postalAddress.address)}}
            </div>
        </div>
        <div class="form-group row">
            <label for="event-city" class="col-sm-2 control-label">Ville</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.postalAddress.city)}}
            </div>
        </div>
        <div class="form-group row">
            <label for="event-zipcode" class="col-sm-2 control-label">Code postal</label>
            <div class="col-sm-3">
                {{form_widget(postWithEventForm.event.postalAddress.zipcode)}}
            </div>
            <label for="event-country" class="col-sm-2 control-label">Pays</label>
            <div class="col-sm-5">
                {{form_widget(postWithEventForm.event.postalAddress.country)}}
            </div>
        </div>
        <div class="form-group row">
            <label for="event-date" class="col-sm-2 control-label">Début *</label>
            <div class="col-sm-10 form-inline">
                <div class="form-inline">
                    <div class="input-group">
                        {{form_widget(postWithEventForm.event.startDate, {'attr': {'placeholder': 'Date de début'}})}} 
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                    <div class="input-group">
                        {{form_widget(postWithEventForm.event.startTime, {'attr': {'placeholder': 'Heure de début'}})}}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="event-date" class="col-sm-2 control-label">Fin</label>
            <div class="col-sm-10 form-inline">
                <div class="form-inline">
                    <div class="input-group">
                        {{form_widget(postWithEventForm.event.endDate, {'attr': {'placeholder': 'Date de fin'}})}} 
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                    <div class="input-group">                            
                        {{form_widget(postWithEventForm.event.endTime, {'attr': {'placeholder': 'Heure de fin'}})}}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>                        
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 control-label">Visibilité *</label>
            <div class="col-sm-10">
                {{form_widget(postWithEventForm.event.privacy, {'label_attr':{'class':'radio-inline'}})}}
            </div>
        </div>
        {{form_widget(postWithEventForm.event.postalAddress.coordinates)}}
        <div class="form-group row">                
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default event-submit">Continuer</button>
            </div>
        </div>
        {{ form_rest(postWithEventForm) }}
    </form>
</div>