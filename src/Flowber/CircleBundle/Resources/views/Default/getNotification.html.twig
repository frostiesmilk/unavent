{# empty Twig template #}
{% extends '::base_frontoffice.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('assets/css/CircleBundle/request.css') }}"/>
{% endblock %}

{% block body %}

    <!-- navbar top -->
    {% include 'FlowberFrontOfficeBundle::partials/common/main-connected-navbar.html.twig' %}

    <div class="messages-container">
        <div class="container">
            <div class="row"> <!--
                <div class="col-md-3 messages-menu">
                    <div class="list-group messages-menu-list">
                        <a href="" class="list-group-item active"><span class="badge"></span>Notifications non lues </a>
                        <a href="" class="list-group-item ">Voir toutes les notifications</a>
                    </div>
                </div>  -->  
                <div class="col-md-2">
                </div>
                <div class="col-md-8 request-content">
                    <h3> Toutes mes notifications </h3>
                    <table class="table table-hover request-stream">
                        <tbody>
                            {% if notifications|length == 0 %}
                                Vous n'avez reçu aucune notification.
                            {% endif %}
                            {% for notification in notifications %}
                                    <tr class="request-stream-element" data-href="{{ path('api_get_circle', {'circleId': notification.circleId}) }}">
                                        <td class="messages-stream-element-clickable">
                                            <a href="{{ path('api_get_circle', {'circleId': notification.senderId}) }}">
                                                <img src="{{asset(notification.senderPic)}}" height="50px" alt="profile picture"/>
                                            </a>
                                        </td>
                                        <td class="messages-stream-element-clickable"> 
                                            <span class="request-forms">
                                                <a href="{{ path('api_get_circle', {'circleId': notification.senderId}) }}">
                                                    {{notification.senderName}}
                                                </a>
                                                {% if notification.circleClass == 'groups' %}
                                                    souhaite devenir membre du groupe : 
                                                    <a href="{{ path('api_get_circle', {'circleId': notification.circleId}) }}">
                                                       {{notification.circleName}}
                                                   </a>
                                                {% elseif notification.circleClass == 'profile' %}                                                
                                                    souhaite devenir ton ami !
                                                {% elseif notification.circleClass == 'event' %}
                                                    souhaite participer à l'évènement : 
                                                    <a href="{{ path('api_get_circle', {'circleId': notification.circleId}) }}">
                                                       {{notification.circleName}}
                                                   </a>
                                                {% endif %}
                                           </span><br>
                                            <span id="reponse-{{notification.requestId}}" class="col-xs-12 text-right">
                                                 <form id="AcceptRequest" class="{{notification.requestId}}" method="post" action="{{ path('api_post_acceptrequest', {'requestId': notification.requestId}) }}" style="display:inline">
                                                    <button type="submit" id="AcceptRequestButton-{{request.requestId}}" class="btn btn-default request-button-ok" title="accepter une demande"> 
                                                        Accepter
                                                    </button>
                                                </form>
                                                 <form id="RefuseRequest" class="{{notification.requestId}}" method="post" action="{{ path('api_post_refuserequest', {'requestId': notification.requestId}) }}" style="display:inline">
                                                    <button type="submit" id="RefuseRequestButton-{{notification.requestId}}" class="btn btn-default request-button-not-ok" title="refuser une demande"> 
                                                        Refuser
                                                    </button>
                                                </form>
                                            </span>
                                        </td>
                                    </tr>                                    
                            {% endfor%}
                    </tbody>
                    </table>
                </div>
            </div>                
        </div>
    </div>
    
    <!-- footer -->                  
    {% include 'FlowberFrontOfficeBundle::partials/common/footer.html.twig' %}
    
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('assets/js/CircleBundle/request.js') }}"></script>

{% endblock %}
