{# FlowberGalleryBundle::partials/gallery-thumbnail.html.twig #}
<div class="thumbnail gallery-list-thumbnail">
    <div class="caption gallery-name-frame" style="color:black">
        <a tabindex="-1" href="{{ path('flowber_group_gallery', {'circleId' : circle.id, 'galleryId' : gallery.id}) }}" title="voir la galerie {{gallery.title}}">
            <h3 class="gallery-name">{{gallery.title}}</h3>
        </a>
    </div>
    <div class="gallery-image-frame">
        <a tabindex="-1" href="{{ path('flowber_group_gallery', {'circleId' : circle.id, 'galleryId' : gallery.id}) }}" title="voir la galerie {{gallery.title}}">
            {% if gallery.photos.1 == 'non'%}
                <img class="gallery-image" src="{{asset(gallery.photos.0)}}" alt=""/>
            {% else %}
                <img class="gallery-image" src="{{asset(gallery.photos.0)}}" alt="" onmouseover="this.src='{{asset(gallery.photos.1)}}'" onmouseout="this.src='{{asset(gallery.photos.0)}}'"/>      
            {% endif %}

        </a>
    </div>
    <div class="caption text-center ">
        <p class="gallery-description">
            {{gallery.creationDate}}
        </p>
        <a tabindex="-1" href="{{ path('flowber_group_gallery', {'circleId' : circle.id, 'galleryId' : gallery.id}) }}" title="voir la galerie {{gallery.title}}">
            <button class="btn btn-default font-white gallery-join-button"> 
                <span class="glyphicon glyphicon-plus font-white" aria-hidden="true"></span> Voir la galerie 
            </button>
        </a>
    </div>
</div>