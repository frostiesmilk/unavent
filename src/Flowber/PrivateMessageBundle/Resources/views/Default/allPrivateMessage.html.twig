{# empty Twig template #}
{% extends '::base_frontoffice.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('assets/css/PrivateMessageBundle/messages.css') }}"/>
{% endblock %}

{% block body %}

    <!-- navbar top -->
    {% include 'FlowberFrontOfficeBundle::partials/common/main-connected-navbar.html.twig' %}
    
    <div class="messages-container">
        <div class="container">
            <div class="row">
                <div class="col-md-2 messages-menu">
                    <div class="list-group messages-menu-list">
                        <a href="{{path('flowber_privatemessage_received_homepage')}}" class="list-group-item {% if type == 'received' %} active {% endif %}"><span class="badge"></span>Messages reçus </a>
                        <a href="{{path('flowber_privatemessage_sent_homepage')}}" class="list-group-item {% if type == 'send' %} active {% endif %}"><span class="badge"></span>Messages envoyés</a>
                        <a href="{{path('flowber_privatemessage_deleted_homepage')}}" class="list-group-item {% if type == 'deleted' %} active {% endif %}"><span class="badge"></span>Corbeille</a>
                    </div>
                </div>
                
                <div class="col-md-10 messages-content">
                    <table class="table table-hover messages-stream">
                        <thead>
                            <tr>
                                <th>
                                    <div class="btn-group" role="group" aria-label="messages-pagination">
                                        <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Messages plus récents"><span class="glyphicon glyphicon-menu-left"></span></button>
                                        <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Messages plus anciens"><span class="glyphicon glyphicon-menu-right"></span></button>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for message in messages %}

                                    <tr class="messages-stream-element" data-href="{{ path('flowber_privatemessage_one_received_homepage', {'id': message.messageId}) }}">
                                        <td class="col-md-2 messages-stream-element-clickable">
                                            <span class="messages-stream-element-author">
                                                {% if message.statut == '2' %}  <b> {% endif %}
                                                    {% if message.is == 'sent' %} 
                                                        A : {{ message.receiversName }}    
                                                    {% else %}
                                                        {{ message.circleFromTitle }}
                                                    {% endif %}
                                                {% if message.statut == '2' %}  </b> {% endif %}
                                            </span>
                                        </td>
                                        <td class="col-md-9 messages-stream-element-clickable">
                                            <span class="messages-stream-element-subject">
                                                {% if message.statut == '2'%}  <b> {% endif %}
                                                    {{ message.subject }}
                                                {% if message.statut == '2'%}  </b> {% endif %}
                                            </span> 
                                            - 
                                            <span class="messages-stream-element-content-preview">{{ message.message }}</span>
                                        </td >
                                        <td class="col-md-1 messages-stream-element-clickable">
                                            <span class="messages-stream-element-date">{{ message.creationDate|date("\\l\\e d/m") }}</span><br>
                                            <span class="messages-stream-element-date">{{ message.creationDate|date("\\à G:i") }}</span>
                                        </td>  
                                        <td class="col-md-2">
                                            <a tabindex="-1" href="{{ path('flowber_delete_message', {'id': message.messageId, 'type':'r'}) }}">
                                                <button type="button" class="btn btn-default  btn-xs"  data-toggle="tooltip" data-placement="top" title="Supprimer le message"> 
                                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                                </button>
                                            </a>
                                            <a tabindex="-1" href="{{ path('flowber_read_message', {'id': message.messageId}) }}">
                                                <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Marquer comme Lu ou Non Lu"> 
                                                    <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                                                </button>
                                            </a>
                                        </td>
                                    </tr>                           

                            {% endfor %}
                            {#
                                {% for userMessage in userMessages %}
                                {{ userMessage.subject }}
                                {% endfor %}
                            #}
                        </tbody>

                    </table>                
                </div>
            </div>        
        </div>
    </div>
   
    <!-- footer -->                  
    {% include 'FlowberFrontOfficeBundle::partials/common/footer.html.twig' %}
    
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {# Put specific JS below #}    
    <script src="{{ asset('assets/js/PrivateMessageBundle/messages.js') }}"></script>
{% endblock %}
