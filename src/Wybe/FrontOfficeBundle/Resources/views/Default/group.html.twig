    <link rel="stylesheet" href="{{ asset('bundles/wybefrontoffice/css/group.css') }}"/>
{% endblock %}

{% block smallMenu %}
    {{parent()}}
    <!-- BEGIN small screen menu -->
    {% include 'WybeFrontOfficeBundle::partials/group/group-navbar-small.html.twig' %}
    <!-- END small screen menu -->
{% endblock %}

{% block body %}

    <!-- navbar top -->
    {% include 'FlowberFrontOfficeBundle::partials/common/main-connected-navbar.html.twig' %}
    
    <!-- Group Cover -->  
    {% include 'WybeFrontOfficeBundle::partials/common/cover.html.twig' %}

    <!-- Second navbar -->
    {% include 'WybeFrontOfficeBundle::partials/group/group-navbar.html.twig' %}
   
    <!-- page -->
    {% include 'WybeFrontOfficeBundle::partials/group/group-content.html.twig' %}
   
    <!-- footer -->                  
    {% include 'WybeFrontOfficeBundle::partials/common/footer.html.twig' %}
    
    

    
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {# Put specific JS below #}
    <script src="{{ asset('bundles/wybefrontoffice/js/testangular.js') }}"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDu4slAxOS7yprod9nmIS1AZm3LC9gk_2Q&signed_in=true&libraries=places&callback=initMap"
            async defer>
        
    </script>    
    
    <script src="{{ asset('bundles/wybefrontoffice/js/dropzone/dropzone.js') }}"></script>
    <script src="{{ asset('bundles/wybefrontoffice/js/group.js') }}"></script>
    
   <script type="text/javascript">
        $('#groupNavbar a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
        
        $("#newPostTextArea, #newMailToHost").keyup(function(e) {
            while($(this).outerHeight() < this.scrollHeight + parseFloat($(this).css("borderTopWidth")) + parseFloat($(this).css("borderBottomWidth"))) {
                $(this).height($(this).height()+1);
            };
        }); 
    </script>
{% endblock %}