{% extends '::base_frontoffice.html.twig' %}

{% block body %}

    <!-- navbar top -->
    {% include 'WybeFrontOfficeBundle::partials/frontoffice/connected-main-navbar.html.twig' %}
    
    <!-- User Banner -->  
    {% include 'WybeFrontOfficeBundle::partials/frontoffice/head.html.twig' %}

    <!-- Second navbar -->
     {% include 'WybeFrontOfficeBundle::partials/navbar/navbar-group.html.twig' %}
   
    <!-- page -->
     {% include 'WybeFrontOfficeBundle::partials/pages/group.html.twig' %}
   
    <!-- footer -->                  
    {% include 'WybeFrontOfficeBundle::Default/footer.html.twig' %}
                           
    <script type="text/javascript">
        $('#groupNavbar a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        })

        /**
         * Automaticaly Expanding textarea
         * @param {type} param
         */
        $("#newPostTextArea, #newMailToHost").keyup(function(e) {
            while($(this).outerHeight() < this.scrollHeight + parseFloat($(this).css("borderTopWidth")) + parseFloat($(this).css("borderBottomWidth"))) {
                $(this).height($(this).height()+1);
            };
        });
    </script>    
{% endblock %}
